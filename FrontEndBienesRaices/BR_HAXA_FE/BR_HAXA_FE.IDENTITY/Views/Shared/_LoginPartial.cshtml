@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-dark" class="w3-bar-item w3-button" asp-area="" asp-controller="Empleadoes" asp-action="Index">Gestión de empleados</a>
    <a class="nav-link text-dark" class="w3-bar-item w3-button" asp-area="" asp-controller="Rols" asp-action="Index">Gestión de roles</a>
    <a class="nav-link text-dark" class="w3-bar-item w3-button" asp-area="" asp-controller="Usuarios" asp-action="Index">Gestión de usuarios</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>



}
else
{

    <a class="nav-link text-dark" class="w3-bar-item w3-button" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesion</a>
    <a class="nav-link text-dark" class="w3-bar-item w3-button" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
}

